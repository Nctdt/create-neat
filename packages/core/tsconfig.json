{
  "extends": "../../tsconfig.json",
  "include": ["."],
  "exclude": ["template/webpack.config.js", "dist", "template/template-*/generator/template"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "paths": {
      "@laconic/*": ["../*"]
    }
  }
}
